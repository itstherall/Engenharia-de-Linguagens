/**
 * Crie um programa que leia uma quantidade desconhecida de números e informe
 * quantos deles estão nos seguintes intervalos fechados: [0, 25], [26, 50], [51, 75]
 * e [76, 100]. A entrada de dados deve terminar quando for lido um número negativo.
 */

 procedure evaluateInterval(number[] list) {
    // limites do intervalo [0, 25]
    number total0 = 0;
     
    // limites do intervalo [26, 50]
    number total1 = 0;

    // limites do intervalo [51, 75] 
    number total2 = 0;

    number total = 0;
    number i = 0;
    while( list[i] >= 0 ) {
        if( i >=0 and i <= 25 ) {
            total0 ++;
        } endif else if( i >= 26 and i<= 50 ) {
            total1 ++;
        } endif else if( i >= 51 and i <= 75 ) {
            total2 ++;
        } endif
        total ++;
        i ++;
    } endwhile

    print("Dos " total " numeros recebidos,\n " total0 " estão no intervalo [0, 25],\n " total1 " estão no intervalo [26, 50], e \n " total2 " estão no intervalo [51, 75].\n ");
 } end

 start() {
    print("digite números inteiros: ");
    number[] lista;

    number i = 0;
    number d;
    
    scan(d);
    while (d >= 0) {
        lista[i] = d;
        i++;
        scan(d);
    } endwhile

    evaluateInterval(lista);
 } end
